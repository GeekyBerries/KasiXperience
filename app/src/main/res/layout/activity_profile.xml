<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="za.connectgau.com.kasixperience.Profile">

    <ImageView
        android:id="@+id/eventsImage3"
        android:layout_width="91dp"
        android:layout_height="92dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFood3"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/ProfilePic"
        android:layout_width="92dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/userName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="47dp" />

    <ImageButton
        android:id="@+id/imageSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <TextView
        android:id="@+id/textFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 50 Following"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="18 Followers"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        tools:layout_editor_absoluteX="116dp" />

    <TextView
        android:id="@+id/textFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="FOOD"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePic"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="EVENTS"
        app:layout_constraintTop_toBottomOf="@+id/imageFood1"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/eventsImage2"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toStartOf="@+id/eventsImage3"
        app:layout_constraintStart_toEndOf="@+id/eventsImage1"
        app:layout_constraintTop_toBottomOf="@+id/imageFood2"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/eventsImage1"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEvents"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageFood1"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageFood2"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFood"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageFood2"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toStartOf="@+id/imageFood3"
        app:layout_constraintTop_toBottomOf="@+id/textFollowers"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageFood3"
        android:layout_width="91dp"
        android:layout_height="92dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFollowing"
        app:srcCompat="@drawable/ic_launcher_background" />
</android.support.constraint.ConstraintLayout>
